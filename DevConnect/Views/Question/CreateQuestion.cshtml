@model DevConnect.Models.Question;
<link rel="stylesheet" href="~/css/ArticleQuestionCreate_styles.css" />
<div class="container-fluid">
    <div class="form-container">
        <form asp-action="CreateQuestion" method="post">
            <div class="form-group">
                <label asp-for="Title">Title</label><br />
                <input asp-for="Title" type="text" class="my-control" />
            </div>
            <div class="form-group">
                <label asp-for="Content">Content</label><br />
                <textarea asp-for="Content">Write your question...</textarea>
            </div>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="text-danger">@ViewBag.ErrorMessage</div>
            }
            <div class="form-group">
                <input type="submit" class="my-submit" value="Create" />
            </div>
        </form>
    </div>
</div>