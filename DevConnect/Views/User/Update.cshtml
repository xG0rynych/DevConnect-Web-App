@model DevConnect.ViewModels.UserUpdateViewModel;
<link rel="stylesheet" href="~/css/UserUpdate_styles.css" />
<div class="container-fluid">
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <div class="form-group mb-2">
            <label asp-for="Bio">Bio</label><br />
            <textarea asp-for="Bio" value="@Model.Bio"></textarea>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Skills">Skills</label><br />
            <textarea asp-for="Skills" value="@Model.Skills"></textarea>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Avatar">Avatar</label><br />
            <input class="form-control" type="file" asp-for="Avatar"/>
        </div>
        <input class="submit mt-2" type="submit" value="Ok" />
    </form>
</div>