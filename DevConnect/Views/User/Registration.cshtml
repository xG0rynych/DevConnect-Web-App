@model DevConnect.Models.User;
<link rel="stylesheet" href="~/css/loginRegistration_styles.css"/>
<div class="container-fluid">
    <div class="form-container">
        <form asp-action="Registration" method="post">
            <div class="form-group mb-2">
                <label asp-for="Username">Username</label><br />
                <input type="text" class="my-control" asp-for="Username"/>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email">Email</label><br />
                <input type="email" class="my-control" asp-for="Email" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password">Password</label><br />
                <input type="password" class="my-control" asp-for="Password" />
            </div>
            <input type="hidden" asp-for="Id" value="0"/>
            @if(ViewBag.ErrorMessage!=null)
            {
                <div class="text-danger">@ViewBag.ErrorMessage</div>
            }
            <div class="form-group mt-2">
                <input type="submit" class="my-submit" value="Sign Up"/>
            </div>
        </form>
    </div>
</div>