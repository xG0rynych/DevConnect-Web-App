@model DevConnect.ViewModels.UserLoginViewModel;
<link rel="stylesheet" href="~/css/loginRegistration_styles.css" />
<div class="container-fluid">
    <div class="form-container">
        <form asp-action="Login" method="post">
            <div class="form-group mb-2">
                <label asp-for="Email">Email</label><br />
                <input asp-for="Email" class="my-control" type="email" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password">Password</label><br />
                <input asp-for="Password" class="my-control" type="password" />
            </div>
            @if (ViewBag.ErrorMEssage != null)
            {
                <div class="text-danger mt-3">
                    @ViewBag.ErrorMessage
                </div>
            }
            <div class="form-group mb-2">
                <input type="submit" value="Login" class="my-submit" />
            </div>
            <a asp-action="Registration">Create an accont</a>
        </form>
    </div>
</div>